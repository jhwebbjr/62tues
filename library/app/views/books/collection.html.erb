<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>ISBN</th>
      <th>Description</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.ISBN %></td>
        <td><%= book.description %></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>
